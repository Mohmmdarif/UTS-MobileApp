<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/maison_neue_bold"
        android:text="Selamat Datang"
        android:textColor="@color/green"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/masaDepan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="7dp"
        android:text="Masa depan pertanian di dalam genggaman,"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/masaDepan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/masaDepan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-1dp"
        android:text="Gabung sekarang!"
        android:textSize="14sp" />

    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
        android:id="@+id/carousel"
        android:layout_width="316dp"
        android:layout_height="280dp"
        android:layout_below="@id/masaDepan2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />
    
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="154dp"
        android:layout_height="39dp"
        android:layout_below="@id/carousel"
        android:id="@+id/tombolDaftar"
        android:hint="Daftar"
        android:textColorHint="@color/green"
        android:background="@drawable/button_selector"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>