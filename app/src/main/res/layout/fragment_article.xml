                                android:src="@drawable/pic_1"
                                app:shapeAppearanceOverlay="@style/RoundedImageview"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_label"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:contentDescription="@string/card_label"
                                />

                            <TextView
                                android:id="@+id/date4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/maison_neue_medium"
                                android:text="@string/date_article"
                                android:textSize="12sp"
                                app:layout_constraintTop_toBottomOf="@+id/card_image4"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginHorizontal="3dp"
                                />

                            <TextView
                                android:id="@+id/card_title4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/maison_neue_bold"
                                android:text="@string/article_title"
                                android:textSize="12sp"
                                app:layout_constraintTop_toBottomOf="@+id/date4"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginHorizontal="3dp"
                                android:maxWidth="113dp"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/section4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/section1"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            >

            <TextView
                android:id="@+id/article_activity_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_article_activity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16sp"
                android:fontFamily="@font/maison_neue_bold"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/article_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/article_activity_header"
                app:cardElevation="0dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >

                    <ImageView
                        android:id="@+id/article_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/frame_article_image"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:contentDescription="@string/article"
                        />

                    <TextView
                        android:id="@+id/article_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lorem_ipsum_dolor_sit_amet"
                        app:layout_constraintStart_toEndOf="@+id/article_image"
                        app:layout_constraintTop_toTopOf="@+id/article_image"
                        android:fontFamily="@font/maison_neue_bold"
                        android:textSize="14sp"
                        android:layout_marginHorizontal="10dp"
                        />

                    <TextView
                        android:id="@+id/article_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/consectetur_adipiscing_elit_sed_do_eiusmod_tempor"
                        app:layout_constraintTop_toBottomOf="@+id/article_title"
                        app:layout_constraintStart_toStartOf="@id/article_title"
                        android:fontFamily="@font/maison_neue_book"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/article_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/article_date"
                        app:layout_constraintStart_toStartOf="@id/article_title"
                        app:layout_constraintTop_toBottomOf="@+id/article_desc"
                        app:layout_constraintBottom_toBottomOf="@+id/article_image"
                        android:fontFamily="@font/maison_neue_book"
                        android:textSize="12sp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <!-- card 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/article_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/article_1"
                app:cardElevation="0dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >

                    <ImageView
                        android:id="@+id/article_image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/frame_article_image"
