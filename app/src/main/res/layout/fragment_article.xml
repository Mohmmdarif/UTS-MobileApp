                    </androidx.cardview.widget.CardView>

                    <!-- card 4 -->

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
