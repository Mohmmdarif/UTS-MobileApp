                        app:layout_constraintTop_toTopOf="@+id/article_image2"
                        android:fontFamily="@font/maison_neue_bold"
                        android:textSize="14sp"
                        android:layout_marginHorizontal="10dp"
                        />

                    <TextView
                        android:id="@+id/article_desc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/consectetur_adipiscing_elit_sed_do_eiusmod_tempor"
                        app:layout_constraintTop_toBottomOf="@+id/article_title2"
                        app:layout_constraintStart_toStartOf="@id/article_title2"
                        android:fontFamily="@font/maison_neue_book"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/article_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/article_date"
                        app:layout_constraintStart_toStartOf="@id/article_title2"
                        app:layout_constraintTop_toBottomOf="@+id/article_desc2"
                        app:layout_constraintBottom_toBottomOf="@+id/article_image2"
                        android:fontFamily="@font/maison_neue_book"
                        android:textSize="12sp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- card 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/article_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/article_2"
                app:cardElevation="0dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >

                    <ImageView
                        android:id="@+id/article_image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/frame_article_image"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:contentDescription="@string/article"
                        />

                    <TextView
                        android:id="@+id/article_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lorem_ipsum_dolor_sit_amet"
                        app:layout_constraintStart_toEndOf="@+id/article_image3"
                        app:layout_constraintTop_toTopOf="@+id/article_image3"
                        android:fontFamily="@font/maison_neue_bold"
                        android:textSize="14sp"
                        android:layout_marginHorizontal="10dp"
                        />

                    <TextView
                        android:id="@+id/article_desc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/consectetur_adipiscing_elit_sed_do_eiusmod_tempor"
                        app:layout_constraintTop_toBottomOf="@+id/article_title3"
                        app:layout_constraintStart_toStartOf="@id/article_title3"
                        android:fontFamily="@font/maison_neue_book"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/article_date3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/article_date"
                        app:layout_constraintStart_toStartOf="@id/article_title3"
                        app:layout_constraintTop_toBottomOf="@+id/article_desc3"
                        app:layout_constraintBottom_toBottomOf="@+id/article_image3"
                        android:fontFamily="@font/maison_neue_book"
                        android:textSize="12sp"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- card 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/article_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/article_3"
