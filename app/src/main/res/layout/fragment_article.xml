<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/container_article_page"
    tools:context=".ArticleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="22dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/maison_neue_bold"
            />

        <TextView
            android:id="@+id/reference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Referance"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/search_title"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/maison_neue_bold"
            />

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/profile_description"
            />

        <RelativeLayout
            android:id="@id/search_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/search_title"
            >

            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_placeholder"
                android:inputType="text"
                android:autofillHints="search"
                android:drawableEnd="@drawable/ion_search_gua"
                android:background="@drawable/input_search"
                android:padding="15dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/maison_neue_book"
                android:textSize="12sp"
                />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/section1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/search_input"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            >

            <TextView
                android:id="@+id/field_activity_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/header_article_article_activity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16sp"
                android:fontFamily="@font/maison_neue_bold"
                />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/field_activity_header"
                tools:layout_editor_absoluteX="-27dp"
                android:scrollbars="none"
                android:paddingVertical="10dp"
                >

                <!-- child view -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <!-- LinearLayout children -->

                    <!-- card 1 -->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_article_for_you_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        app:cardElevation="0dp"
                        >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            >

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/card_image1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="@string/card_title"
                                android:src="@drawable/pic_1"
                                app:shapeAppearanceOverlay="@style/RoundedImageview"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_label"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:contentDescription="@string/card_label"
                                />

                            <TextView
                                android:id="@+id/date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/maison_neue_medium"
                                android:text="@string/date_article"
                                android:textSize="12sp"
                                app:layout_constraintTop_toBottomOf="@+id/card_image1"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginHorizontal="3dp"
                                />

                            <TextView
                                android:id="@+id/card_title1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/maison_neue_bold"
                                android:text="@string/article_title"
                                android:textSize="12sp"
                                app:layout_constraintTop_toBottomOf="@+id/date"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginHorizontal="3dp"
                                android:maxWidth="113dp"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- card 2 -->

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        app:cardElevation="0dp"
                        >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            >

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/card_image2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="@string/card_title"
                                android:src="@drawable/pic_1"
                                app:shapeAppearanceOverlay="@style/RoundedImageview"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/card_label"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:contentDescription="@string/card_label"
                                />

                            <TextView
                                android:id="@+id/date2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/maison_neue_medium"
                                android:text="@string/date_article"
                                android:textSize="12sp"
                                app:layout_constraintTop_toBottomOf="@+id/card_image2"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginHorizontal="3dp"
                                />

                            <TextView
                                android:id="@+id/card_title2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/maison_neue_bold"
                                android:text="@string/article_title"
                                android:textSize="12sp"
                                app:layout_constraintTop_toBottomOf="@+id/date2"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginHorizontal="3dp"
                                android:maxWidth="113dp"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- card 3 -->

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="5dp"
                        app:cardElevation="0dp"
                        >

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
